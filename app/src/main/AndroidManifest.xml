<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.oneroofit.it">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/favicon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/favicon"
        android:supportsRtl="true"
        android:theme="@style/Theme.OneRoofIt"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".verification.VerifyPhoneActivity"
            android:theme="@style/Theme.OneRoofIt.NoActionBar"></activity>
        <activity android:name=".activities.ServicesActivity"></activity>
        <activity
            android:name=".verification.RegistrationActivity"
            android:theme="@style/Theme.OneRoofIt.NoActionBar" />
        <activity
            android:name=".verification.LoginActivity"
            android:theme="@style/Theme.OneRoofIt.NoActionBar"></activity>
        <activity
            android:name=".verification.SplashScreenActivity"
            android:theme="@style/Theme.OneRoofIt.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".verification.VerifyOTP"
            android:theme="@style/Theme.OneRoofIt.NoActionBar" />
        <activity
            android:name=".verification.SetNewPassword"
            android:theme="@style/Theme.OneRoofIt.NoActionBar" />
        <activity
            android:name=".verification.FPMakeSelection"
            android:theme="@style/Theme.OneRoofIt.NoActionBar" />
        <activity
            android:name=".verification.ForgetPasswordEmail"
            android:theme="@style/Theme.OneRoofIt.NoActionBar" />
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.OneRoofIt.NoActionBar"></activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>